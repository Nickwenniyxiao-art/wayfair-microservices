{
  "name": "wayfair-order-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Order Management Microservice",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",
    "db:push": "drizzle-kit generate && drizzle-kit migrate"
  },
  "dependencies": {
    "@trpc/server": "^11.6.0",
    "drizzle-orm": "^0.44.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "mysql2": "^3.15.0",
    "redis": "^4.6.14",
    "superjson": "^1.13.3",
    "uuid": "^9.0.1",
    "winston": "^3.14.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.20.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
